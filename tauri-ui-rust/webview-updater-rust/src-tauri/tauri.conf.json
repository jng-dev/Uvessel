{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "webview-updater-rust",
  "version": "0.1.0",
  "identifier": "com.james-gardiner.webview-updater-rust",
  "build": {
    "frontendDist": "../static"
  },
  "app": {
    "windows": [
      {
        "title": "Updating",
        "width": 360,
        "height": 160,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
